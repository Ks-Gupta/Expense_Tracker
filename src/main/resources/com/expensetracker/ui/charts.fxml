<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.expensetracker.controller.ChartsController"
            prefWidth="900" prefHeight="600">

    <Label text="Expense Analytics"
           layoutX="350" layoutY="20"
           style="-fx-font-size: 22px; -fx-font-weight: bold;" />

    <Label text="Month:" layoutX="100" layoutY="80" />
    <ComboBox fx:id="monthCombo" layoutX="160" layoutY="75" prefWidth="120" />

    <Label text="Year:" layoutX="320" layoutY="80" />
    <ComboBox fx:id="yearCombo" layoutX="370" layoutY="75" prefWidth="120" />

    <Button text="Load Charts"
            layoutX="520" layoutY="75"
            onAction="#loadCharts"
            prefWidth="150" />

    <!-- PIE CHART -->
    <PieChart fx:id="pieChart"
              layoutX="50" layoutY="130"
              prefWidth="350" prefHeight="400" />

    <!-- BAR CHART -->
    <BarChart fx:id="barChart"
              layoutX="450" layoutY="130"
              prefWidth="400" prefHeight="400">
        <xAxis>
            <CategoryAxis label="Date"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Amount"/>
        </yAxis>
    </BarChart>

    <Button text="â† Back"
            layoutX="20"
            layoutY="20"
            onAction="#goBack" />


</AnchorPane>
