<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.expensetracker.controller.AddCategoryController"
            prefHeight="400.0" prefWidth="600.0">


    <Label layoutX="180" layoutY="30"
           text="Add New Category"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Input field -->
    <TextField fx:id="categoryField"
               layoutX="125" layoutY="100"
               promptText="Enter category name"
               prefWidth="250" />

    <!-- Save button -->
    <Button layoutX="200" layoutY="150"
            text="Save Category"
            onAction="#handleAddCategory"
            prefWidth="150" />

    <!-- Message label -->
    <Label fx:id="messageLabel"
           layoutX="180" layoutY="200"
           text=""
           style="-fx-text-fill: green;" />

</AnchorPane>
